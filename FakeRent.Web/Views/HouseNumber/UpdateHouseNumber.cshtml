@model HouseNumberUpdateViewModel
<form asp-action="UpdateHouseNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update House</h1>
        <hr />
        <input hidden asp-for="HouseNumber.HouseNo" />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="HouseNumber.HouseNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="HouseNumber.HouseNo" disabled class="form-control" />
                <span asp-validation-for="HouseNumber.HouseNo" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="HouseNumber.HouseId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="HouseNumber.HouseId" class="form-select" asp-items="@Model.HouseList">
                    <option disabled selected>--Select Villa--</option>
                </select>
                <span asp-validation-for="HouseNumber.HouseId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="HouseNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="HouseNumber.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="HouseNumber.SpecialDetails" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexHouseNumber" asp-controller="HouseNumber" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
